<!-- sobit_turtlebot_velocity_smoother.launch.xml -->
<launch>
    <arg name="manager_name"            default="velocity_smoother_nodelet_manager" />
    <arg name="manager_threads"         default="4" />
    <node pkg="nodelet" type="nodelet" name="$(arg manager_name)" args="manager" output="screen">
        <param name="num_worker_threads" value="$(arg manager_threads)" />
    </node>
    <node pkg="nodelet" type="nodelet" name="navigation_velocity_smoother" args="load yocs_velocity_smoother/VelocitySmootherNodelet $(arg manager_name)">
        <rosparam file="$(find sobit_navigation)/param/sobit_pro/velocity_smoother_params.yaml" command="load"/>
        <remap from="navigation_velocity_smoother/smooth_cmd_vel" to="mobile_base/commands/velocity"/>
        <!-- Robot velocity feedbacks; use the default base configuration -->
        <remap from="navigation_velocity_smoother/odometry" to="odom"/>
        <!-- <remap from="navigation_velocity_smoother/robot_cmd_vel" to="mobile_base/commands/velocity"/> -->
    </node>
</launch>
